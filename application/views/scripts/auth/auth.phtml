<script type="text/javascript">
	function submitAuth (e) {
		if ($(e.explicitOriginalTarget).attr('id') == "inputLogin" && $('#inputPass').text() == "") {
			$('#inputPass').focus();
			return false;
		} else {
			document.getElementById('authForm').submit();
		}
	}

	$(function(){
		$('#inputLogin').focus();
		$('#mask').hide();
	});
</script>
