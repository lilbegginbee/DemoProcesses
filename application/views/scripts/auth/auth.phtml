    <div class="col-lg-5 well">
        <form class="form-signin" name="auth" method="post" action="<?=$this->url(array(), 'auth')?>" id="authForm" onsubmit="submitAuth(event); return false;">
        <div class="login-screen">
            <div class="login-form">

                <?=$this->FormErrors($this->form)?>

                <?=$this->ElementsErrors($this->form)?>

                <div class="form-group">
                    <input name="login" type="text" id="inputLogin" placeholder="Логин" value="<?= $this->form->login->getValue() ?>" class="form-control"  autocomplete="off">
                    <i class="login-field-icon fa fa-user"></i>
                </div>

                <div class="form-group">
                    <input name="password" type="password" id="inputPass" placeholder="Пароль" value="" class="form-control" autocomplete="off">
